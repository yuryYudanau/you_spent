<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="YouSpent.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:YouSpent.Views"
    xmlns:resources="clr-namespace:YouSpent.Resources.Strings"
    Title="{x:Static resources:AppResources.AppTitle}">

    <TabBar>
        <ShellContent
            Title="{x:Static resources:AppResources.TabHome}"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="HomePage" />

        <ShellContent
            Title="{x:Static resources:AppResources.TabExpenses}"
            Icon="plus.png"
            ContentTemplate="{DataTemplate views:AddExpensePage}"
            Route="AddExpensePage" />

        <ShellContent
            Title="{x:Static resources:AppResources.TabWishlist}"
            Icon="list.png"
            ContentTemplate="{DataTemplate views:WishlistPage}"
            Route="WishlistPage" />
    </TabBar>

</Shell>

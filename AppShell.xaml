<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="YouSpent.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:YouSpent.Views"
    xmlns:resources="clr-namespace:YouSpent.Resources.Strings"
    Title="{x:Static resources:AppResources.AppTitle}">

    <Shell.TitleView>
        <Grid Padding="0,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <Label Text="{x:Static resources:AppResources.AppTitle}"
                   Grid.Column="0"
                   VerticalOptions="Center"
                   FontSize="18"
                   FontAttributes="Bold" />
            
            <!-- Settings Button -->
            <Border Grid.Column="1"
                    StrokeThickness="0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                    HeightRequest="44"
                    WidthRequest="44"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSettingsClicked"/>
                </Border.GestureRecognizers>
                
                <Label Text="â˜°"
                       FontSize="24"
                       TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource PrimaryDarkText}}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
        </Grid>
    </Shell.TitleView>

    <TabBar>
        <ShellContent
            Title="{x:Static resources:AppResources.TabHome}"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="HomePage" />

        <ShellContent
            Title="{x:Static resources:AppResources.TabExpenses}"
            Icon="plus.png"
            ContentTemplate="{DataTemplate views:ExpensesPage}"
            Route="ExpensesPage" />

        <ShellContent
            Title="{x:Static resources:AppResources.TabWishlist}"
            Icon="list.png"
            ContentTemplate="{DataTemplate views:WishlistPage}"
            Route="WishlistPage" />
    </TabBar>

</Shell>
